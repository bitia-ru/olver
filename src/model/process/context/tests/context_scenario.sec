/********************************************************************/
/**                       Test Scenario Data                       **/
/********************************************************************/

static CallContext context;
static UContextT * ucp1;
static UContextT * ucp2;

/********************************************************************/
/**                  Test Scenario Initialization                  **/
/********************************************************************/

static String * testingFuncName;

static bool init_scenario( char * name )
{
    int i;
    verbose( "%s\n", name );
    dotPrint( 0, 0 );
    testingFuncName = create_String( name );
    context = getContext();
    ucp1 = createEmpty_UContextT( 1 );
    ucp2 = createEmpty_UContextT( 2 );
    return true;
}

#define finish_scenario( name ) \
{ \
    verbose( "\n" ); \
    TEST_SCENARIO_VERDICT_VERBOSE( name##_scenario ); \
}

static bool init_get_make_set_scenario( int argc, char ** argv ) { return init_scenario( "get make set context" ); }
static bool init_get_swap_scenario    ( int argc, char ** argv ) { return init_scenario( "get swap context"     ); }

static void finish_get_make_set_scenario( void ) finish_scenario( get_make_set_context )
static void finish_get_swap_scenario    ( void ) finish_scenario( get_swap_context     )

/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/

scenario
bool get_make_set_scen()
{
    iterate ( int i = 1; i <= 3; i++; )
    {
        ProcessState * processState;
        List /* CharTObj */ * ucpForMakecontext;
        dotPrint( 10, 50 );
        switch ( i ) {
            case 1: getcontext_spec( context, ucp1 ); break;
            case 2: setcontext_spec( context, ucp1 ); break;
            case 3: makecontext_spec( context, ucp1, create_CString( "funcAtMakecontext1" ), 0 ); break;
        }
    }
    return true;
}

scenario
bool get_swap_scen()
{
    iterate ( int i = 1; i <= 2; i++; )
    {
        dotPrint( 10, 50 );
        switch ( i ) {
            case 1: getcontext_spec ( context,       ucp1                     ); break;
            case 2: swapcontext_spec( context, ucp2, ucp1, requestErrorCode() ); break;
        }
    }
    return true;
}

/********************************************************************/
/**                     Model State Operations                     **/
/********************************************************************/

static Map * saveSingleModelState( void ) { return clone( systems ); }

static void restoreSingleModelState( Map * saved_state ) { systems = saved_state; }

static bool isSingleModelStateStationary( void ) { return true; }

/********************************************************************/
/**                    Test Scenario Definition                    **/
/********************************************************************/

scenario dfsm get_make_set_context_scenario =
{
    .init    = init_get_make_set_scenario  ,
    .finish  = finish_get_make_set_scenario,
    .actions = { get_make_set_scen,
                 NULL
               }
};

scenario dfsm get_swap_context_scenario =
{
    .init    = init_get_swap_scenario  ,
    .finish  = finish_get_swap_scenario,
    .actions = { get_swap_scen,
                 NULL
               }
};

