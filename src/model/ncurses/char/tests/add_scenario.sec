static CallContext context;


/********************************************************************/
/**                  Test Scenario Initialization                  **/
/********************************************************************/
static bool init_char_add_scenario(int argc,char** argv)
{
    context = createDefaultProcessForNCurses();
    
    initReqFilters();
    
    return true;
    
}


static void finish_char_add_scenario(void)
{
    terminateNCursesProcess(context);
}

/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/

scenario
bool io_char_add_scen()
{
    ChTypeT ch;
    NCursesPosition* pos=create_NCursesPosition(10, 10);
    NewWinReturnType* winRet;

    initscr_spec(context);

    winRet = newwin_spec( context, 30, 30, 5, 5);

    ch.altcharset=false;   // Alternate character set
    ch.blink=false;        // Blinking
    ch.bold=true;         // Extra bright or bold
    ch.dim=false;          // Half bright
    ch.invis=false;        // Invisible
    ch.protect=false;      // Protected
    ch.reverse=false;      // Reverse video
    ch.standout=false;     // Best highlighting mode of the terminal
    ch.underline=false;    // Underlining
    ch.colorPair=false;
    ch.letter='a';

    addch_spec(context, ch, NULL, pos, false);
    inch_spec(context, NULL, pos);
    inch_spec(context, NULL, NULL);

    refresh_spec(context, NULL);

    ch.letter='x';
    addch_spec(context, ch, NULL, NULL, true);
    inch_spec(context, NULL, NULL);

    refresh_spec(context, NULL);

    addch_spec(context, ch, NULL, NULL, false);
    inch_spec(context, NULL, NULL);

    refresh_spec(context, NULL);

    pos->x=0;
    pos->y=0;
    inch_spec(context, NULL, pos);

    ch.letter='b';
    ch.underline=true;    // Underlining
    insch_spec(context, ch, NULL, NULL);
    inch_spec(context, NULL, NULL);

    refresh_spec(context, NULL);

    pos->x=20;
    pos->y=20;
    insch_spec(context, ch, NULL, pos);
    inch_spec(context, NULL, pos);

    refresh_spec(context, NULL);

    insch_spec(context, ch, &(winRet->win), pos);
    inch_spec(context, &(winRet->win), pos);

    refresh_spec(context,  &(winRet->win));

    ch.letter='c';
    insch_spec(context, ch, NULL, pos);
    inch_spec(context, NULL, pos);

    refresh_spec(context, NULL);

    addch_spec(context, ch, &(winRet->win), NULL, false);
    inch_spec(context, &(winRet->win), NULL);

    refresh_spec(context,  &(winRet->win));

    pos->x=2;
    ch.letter='m';
    addch_spec(context, ch, &(winRet->win), pos, false);
    (pos->x)--;
    inch_spec(context, &(winRet->win), pos);

    refresh_spec(context,  &(winRet->win));

    addch_spec(context, ch, &(winRet->win), pos, true);
    (pos->x)--;
    inch_spec(context, &(winRet->win), pos);

    refresh_spec(context,  &(winRet->win));

    insch_spec(context, ch, &(winRet->win), NULL);
    inch_spec(context, &(winRet->win), NULL);

    refresh_spec(context,  &(winRet->win));

    endwin_spec(context);

    return true;
}

/********************************************************************/
/**                    Test Scenario Definition                    **/
/********************************************************************/
scenario dfsm char_add_scenario =
{
    .init = init_char_add_scenario,
        .finish = finish_char_add_scenario,
        .actions = {
            io_char_add_scen,
            NULL
    }
};

bool main_ncurses_char_addch( int argc, char** argv )
{
    char_add_scenario(argc, argv);
    return true;
}

