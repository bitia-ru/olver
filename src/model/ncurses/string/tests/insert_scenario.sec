static CallContext context;

#define NUM_POS 4

static NCursesPosition* positions[NUM_POS];
static CString*         strings[NUM_POS];
static IntT*            numChars[NUM_POS];
static WindowTPtr*      windows[NUM_POS];


/********************************************************************/
/**                  Test Scenario Initialization                  **/
/********************************************************************/



static bool init_insert_nstring_scenario(int argc,char** argv)
{
    context = createDefaultProcessForNCurses();
    
    initReqFilters();
    
    return true;
    
}


static void finish_insert_nstring_scenario(void)
{
    terminateNCursesProcess(context);
    
    
}


/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/


scenario
bool io_insert_nstring_scen()
{
    NewWinReturnType* winRet1, *winRet2;
    NCursesPosition* pos =create_NCursesPosition(10 ,10);
    CString* str = create_CString("string");
    IntT n1=10, n2=5, n3=100, nMinusOne=0;
    IntT i,j,k,s;
    InitScrReturnType* retScr;
    
    retScr=initscr_spec(context);
    
    windows[0] = NULL;
    winRet1 = newwin_spec( context, 40, 60, 5, 5);
    windows[1] = &(winRet1->win);
    windows[2] = NULL;
    winRet2 = newwin_spec( context, 30, 50, 2, 7);
    windows[3] = &(winRet2->win);
    
    positions[0] = create_NCursesPosition(retScr->cols/2, retScr->lines-3);
    positions[1] = NULL;
    positions[2] = create_NCursesPosition(retScr->cols-1, retScr->lines-1);
    positions[3] = create_NCursesPosition(0, 0);
    
    strings[0] = create_CString("x");
    strings[1] = create_CString("ytring1");
    strings[2] = create_CString("ztring2");
    strings[3] = create_CString("wtring2string2string2string2");
    
    numChars[0] = NULL;
    numChars[1] = &n1;
    numChars[2] = &n2;
    numChars[3] = &n3;
    
    for (i=0;i<NUM_POS;i++)
    {
        for (j=0;j<NUM_POS;j++)
        {
            for (k=0;k<NUM_POS;k++)
            {
                for (s=0;s<NUM_POS;s++)
                {
                    traceFormattedUserInfo("insert point: %d %d %d %d", i, j, k, s);
                    insstr_spec(context,  windows[i], positions[j],  strings[k], numChars[s]);
                    instr_spec(context,  windows[i], positions[j], numChars[s]);
                }
                refresh_spec(context, windows[i]);
            }
        }
    }

    for (i=0;i<NUM_POS;i++)
    {
        for (j=0;j<NUM_POS;j++)
        {
            for (k=0;k<NUM_POS;k++)
            {
                for (s=0;s<NUM_POS;s++)
                {
                    if (i==1)
                    {
                        i=i;
                    }
                    traceFormattedUserInfo("insert point: %d %d %d %d", i, j, k, s);
                    insstr_spec(context,  windows[i], positions[j],  strings[k], &nMinusOne);
                    instr_spec(context,  windows[i], positions[j], numChars[s]);
                }
                refresh_spec(context, windows[i]);
            }
        }
    }

    endwin_spec(context);
    
    return true;
}

/********************************************************************/
/**                    Test Scenario Definition                    **/
/********************************************************************/

scenario dfsm insert_nstring_scenario =
{
    .init = init_insert_nstring_scenario,
        .finish = finish_insert_nstring_scenario,
        .actions = {
            io_insert_nstring_scen,
            NULL
    }
};

bool main_ncurses_nstring_insert( int argc, char** argv )
{
    addTraceToFile("trace.xml");

    insert_nstring_scenario(argc, argv);
    
    return true;
}

