static bool init_fmtmsg_scenario(int argc, char** argv)
{
    /* Init test scenario data */
    context = getContext();
      
    return true;
}

static void finish_fmtmsg_scenario(void)
{
    /**/
}

/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/


scenario
bool fmtmsg_scen(void)
{
    IntT i=0;
    
    for (i=0;i<5;i++)
    {
        fmtmsg_spec(context, create_MsgClassAndSeverity(SUT_MM_FIRM, SUT_MM_UTIL, SUT_MM_RECOVER, 
            i), create_CString("labxxx"), create_CString("labyy"), create_CString("Info text"), 
            create_CString("action"), create_CString("tag2"));
        fmtmsg_spec(context, create_MsgClassAndSeverity(SUT_MM_SOFT, SUT_MM_APPL, SUT_MM_RECOVER, 
            i), create_CString(""), create_CString("lab2"), create_CString("txt"),
            create_CString("act"), create_CString("tag"));
    }

    return true;
}


/********************************************************************/
/**                     Test Scenario Definition                   **/
/********************************************************************/

scenario dfsm fmtmsg_scenario =
{
    .init = init_fmtmsg_scenario,
    .finish = finish_fmtmsg_scenario,
    .actions = {
        fmtmsg_scen,
        NULL
    }
};



