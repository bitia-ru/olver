/********************************************************************/
/**                     Test Scenario Parameters                   **/
/********************************************************************/
#define MAX_QUEUE_SIZE  3
#define MAX_BUFFER_SIZE 2

/********************************************************************/
/**                      Test Scenario Debug                       **/
/********************************************************************/
#ifdef IO_TERM_LOCAL_MAIN

static AssertionExit system_assertion_handler;

void io_term_rw_case_d_assertion_exit(const char *format, va_list arg_list)
{
    system_assertion_handler(format, arg_list);
}

#endif /* #ifdef IO_TERM_LOCAL_MAIN */

/********************************************************************/
/**                       Test Scenario Data                       **/
/********************************************************************/
static CallContext context;
static FileDescId ptm_desc_id;
static FileDescId pts_desc_id;
static VoidTPtr ptm_termp;
static VoidTPtr pts_termp;
static ErrorCode *error;

/********************************************************************/
/**                  Test Scenario Initialization                  **/
/********************************************************************/
static bool init_rw_case_d_scenario(int argc, char **argv)
{
#ifdef IO_TERM_LOCAL_MAIN

    system_assertion_handler = atAssertion(io_term_rw_case_d_assertion_exit);

#endif /* #ifdef IO_TERM_LOCAL_MAIN */

    context = getContext();
    initPathSystemConfiguration();
    ptm_desc_id = WrongFileDescId;
    pts_desc_id = WrongFileDescId;

    ptm_termp = allocateMemoryBlock(context, sizeof_Type(context, "struct termios"));
    pts_termp = allocateMemoryBlock(context, sizeof_Type(context, "struct termios"));

    if(isNULL_VoidTPtr(ptm_termp) || isNULL_VoidTPtr(pts_termp))
        return false;

    error = create_ErrorCode(SUT_EOK);

    setTSTimeModel(NotUseTSTime);
    setFindFirstSeriesOnly(true);
    setWTimeMSec(50);

    return true;
}

static void finish_rw_case_d_scenario(void)
{
    deallocateMemoryBlock(context, ptm_termp);
    deallocateMemoryBlock(context, pts_termp);

    TEST_SCENARIO_VERDICT_VERBOSE(io_term_rw_case_d_scenario);
}

/********************************************************************/
/**                Test Scenarios Generalized States               **/
/********************************************************************/
static Integer* rw_case_d_scenario_state(void)
{
    if(isWrong_FileDescId(ptm_desc_id))
    {
        return create_Integer(-1);
    }
    else
    {
        Terminal *pts = getTerminal_FileDescId(pts_desc_id);
        TerminalQueue *queue = getInputQueue_Terminal(pts);

        return create_Integer(size_TerminalQueue(queue));
    }
}

/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/
scenario
bool open_d_scen()
{
    if(isWrong_FileDescId(ptm_desc_id))
    {
        openpty_spec(context, &ptm_desc_id, &pts_desc_id, NULL, ptm_termp, NULL, error);

        tcgetattr_spec(context, ptm_desc_id, ptm_termp, error);
        tcgetattr_spec(context, pts_desc_id, pts_termp, error);
    }

    return true;
}

scenario
bool read_d_scen()
{
    if(!isWrong_FileDescId(ptm_desc_id))
    {
        iterate(int i = 0; i < MAX_BUFFER_SIZE; i++;)
        {
            read_tty_spec(context, pts_desc_id, i);
        }
    }

    return true;
}

scenario
bool write_d_scen()
{
    if(!isWrong_FileDescId(ptm_desc_id))
    {
        Terminal *pts = getTerminal_FileDescId(pts_desc_id);
        TerminalQueue *queue = getInputQueue_Terminal(pts);

        if(size_TerminalQueue(queue) < MAX_QUEUE_SIZE)
        {
            iterate(int i = 0; i < MAX_BUFFER_SIZE; i++;)
            {
                write_tty_spec(context, ptm_desc_id, create_CByteArray(NULL, i), i);
            }
        }
    }

    return true;
}

scenario
bool close_d_scen()
{
    if(!isWrong_FileDescId(ptm_desc_id))
    {
        tcflush_spec(context, ptm_desc_id, SUT_TCIOFLUSH);
        tcflush_spec(context, pts_desc_id, SUT_TCIOFLUSH);

        close_tty_spec(context, ptm_desc_id);
        close_tty_spec(context, pts_desc_id);

        ptm_desc_id = WrongFileDescId;
        pts_desc_id = WrongFileDescId;
    }

    return true;
}

/********************************************************************/
/**                    Test Scenario Definition                    **/
/********************************************************************/
scenario dfsm io_term_rw_case_d_scenario =
{
    .init = init_rw_case_d_scenario,
    .finish = finish_rw_case_d_scenario,
    .getState = (PtrGetState)rw_case_d_scenario_state,
    .saveModelState = (PtrSaveModelState)saveIoTermModelState,
    .restoreModelState = (PtrRestoreModelState)restoreIoTermModelState,
    .isStationaryState = (PtrIsStationaryState)isIoTermModelStateStationary,
    .actions =
    {
        open_d_scen,
        read_d_scen,
        write_d_scen,
        close_d_scen,
        NULL
    }
};

bool main_io_term_rw_case_d(int argc, char **argv)
{
    io_term_rw_case_d_scenario(argc, argv);
    return true;
}

