#ifdef IO_TERM_LOCAL_MAIN

static AssertionExit system_assertion_handler;

void io_term_tcpgrp_assertion_exit(const char *format, va_list arg_list)
{
    system_assertion_handler(format, arg_list);
}

#endif /* #ifdef IO_TERM_LOCAL_MAIN */

/********************************************************************/
/**                       Test Scenario Data                       **/
/********************************************************************/
static CallContext context;
static VoidTPtr termp;
static ErrorCode *error;

/********************************************************************/
/**                  Test Scenario Initialization                  **/
/********************************************************************/
static bool init_tcpgrp_scenario(int argc, char **argv)
{
#ifdef IO_TERM_LOCAL_MAIN

    system_assertion_handler = atAssertion(io_term_tcpgrp_assertion_exit);

#endif /* #ifdef IO_TERM_LOCAL_MAIN */

    context = getContext();
    initPathSystemConfiguration();
    termp = allocateMemoryBlock(context, sizeof_Type(context, "struct termios"));

    if(isNULL_VoidTPtr(termp))
        return false;

    error = create_ErrorCode(SUT_EOK);

    setTSTimeModel(NotUseTSTime);
    setFindFirstSeriesOnly(true);
    setWTimeMSec(100);

    return true;
}

static void finish_tcpgrp_scenario(void)
{
    deallocateMemoryBlock(context, termp);

    TEST_SCENARIO_VERDICT_VERBOSE(io_term_tcpgrp_scenario);
}

/********************************************************************/
/**                Test Scenarios Generalized States               **/
/********************************************************************/

/********************************************************************/
/**                          Test Actions                          **/
/********************************************************************/
scenario
bool tcpgrp_scen()
{
    FileDescId amaster, aslave;
    CString *name = create_CString("");
    WinSize *winp = default_WinSize();

    openpty_spec(context, &amaster, &aslave, name, NULL_VoidTPtr, winp, error);
    tcgetattr_spec(context, aslave, termp, error);
    tcgetpgrp_spec(context, aslave, error);
    tcgetsid_spec(context, aslave, error);
    tcsetpgrp_spec(context, aslave, WrongProcessId);

    return true;
}

/********************************************************************/
/**                    Test Scenario Definition                    **/
/********************************************************************/
scenario dfsm io_term_tcpgrp_scenario =
{
    .init = init_tcpgrp_scenario,
    .finish = finish_tcpgrp_scenario,
    .saveModelState = (PtrSaveModelState)saveIoTermModelState,
    .restoreModelState = (PtrRestoreModelState)restoreIoTermModelState,
    .isStationaryState = (PtrIsStationaryState)isIoTermModelStateStationary,
    .actions =
    {
        tcpgrp_scen,
        NULL
    }
};

bool main_io_term_tcpgrp(int argc, char **argv)
{
    io_term_tcpgrp_scenario(argc, argv);
    return true;
}

